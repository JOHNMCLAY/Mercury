<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="#ef4444" />
      <padding
          android:left="4dp"
          android:top="4dp"
          android:right="4dp"
          android:bottom="4dp" />
    </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="#63B8FF"
          android:endColor="#4F94CD"
          android:angle="270" />
      <padding
          android:left="4dp"
          android:top="4dp"
          android:right="4dp"
          android:bottom="4dp" />
    </shape>
  </item>
</selector>